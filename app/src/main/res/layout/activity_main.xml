  <ImageButton
    android:id="@+id/badge"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginEnd="16dp"
    android:background="@drawable/ic_badges"
    app:layout_constraintBottom_toBottomOf="@+id/imageView"
    app:layout_constraintEnd_toEndOf="@+id/imageView"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/badges"
    app:layout_constraintBottom_toBottomOf="@+id/badge"
    app:layout_constraintTop_toBottomOf="@id/badge"
    app:layout_constraintEnd_toEndOf="@id/badge"
    app:layout_constraintVertical_bias="1.0"
    tools:layout_editor_absoluteX="32dp"
    />

  <ImageButton
    android:id="@+id/scout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginStart="16dp"
    android:background="@drawable/ic_scout"
    app:layout_constraintBottom_toBottomOf="@+id/imageView"
    app:layout_constraintStart_toStartOf="@+id/imageView"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/scout_button"
    app:layout_constraintBottom_toBottomOf="@+id/badge"
    app:layout_constraintTop_toBottomOf="@id/badge"
    app:layout_constraintStart_toStartOf="@id/scout"
    app:layout_constraintVertical_bias="1.0"
    tools:layout_editor_absoluteX="32dp"
    />

